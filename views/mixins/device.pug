
mixin device-details(details)
	div.device(id=details.device.UID, onclick="clickDevice(this);")
		div.json=JSON.stringify(details)
		div.header
			h3.dev-name=details.device.TYPE
		div.detail
			table.device-details
				tr
					td.key Manufacturer
					td.val=details.device.MFG
				tr
					td.key Model
					td.val=details.device.MODEL
				tr
					td.key SN#
					td.val=details.device.SN

